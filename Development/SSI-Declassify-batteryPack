//Declassify batteryPack

CONTRACT_TYPE
{
//Requirements for Contract to Appear	
	REQUIREMENT
	{
		name = PartUnlocked
		type = PartUnlocked
		
		part = batteryPack
	}
	
//Contract Descriptions
	name = SSI-Declassify-batteryPack
	title = SSI: Declassify the Z-100 Battery Pack
	group = SSI Aerospace
	agent = SSI Aerospace
	
	description = It looks like the SSI Aerospace Z-100 Battery Pack patent has expired. Accept this contract to declassify it.
	
	synopsis = Declassify the Z-100 Battery Pack
	
	notes = Simply accept this contract, and launch or fly any craft to clear the Experimental tag on the Z-100 Battery Pack.
	
	completedMessage = We have declassified the Z-100 Battery Pack. It should no longer be classified as Experimental.

//Contract Limits
	minExpiry = 7.0
	maxExpiry = 7.0
	deadline = 0
	cancellable = true
	declinable = true
	autoAccept = false
	prestige = Trivial
   	targetBody = Kerbin
   	maxCompletions = 0
   	maxSimultaneous = 1

//Contract Rewards
 	rewardScience = 0
  	rewardReputation = 0
  	rewardFunds = 0
 	failureReputation = 0
  	failureFunds = 0
  	advanceFunds = 0
	weight = 10.0


//Behaviors to do when creating contract
	BEHAVIOUR
	{
		name = ExperimentalPart
		type = ExperimentalPart
		
		part = batteryPack
		
		unlockCriteria = CONTRACT_ACCEPTANCE
		lockCriteria = CONTRACT_COMPLETION
	}

	
//Parameters for Contract Completion
	PARAMETER
	{
		name = Timer
		type = Timer
		
		duration = 5s
		timerType = CONTRACT_ACCEPTANCE
		failContract = false
		
	}

}
